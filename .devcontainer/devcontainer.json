{
  "name": "God-Stack Backend",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "multiUser": true,
      "extraNixConfig": "experimental-features = nix-command flakes"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // SSH vom Host mounten (nur für Keys, nicht für Sockets)
  // GPG: Keys werden im postCreateCommand kopiert, da .gnupg Unix-Sockets enthält
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh-host,type=bind,readonly"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates",
        "vadimcn.vscode-lldb",
        "fill-labs.dependi",
        "usernamehw.errorlens",
        "eamodio.gitlens",
        "mkhl.direnv"
      ],
      "settings": {
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.cargo.features": "all",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        },
        "direnv.restart.automatic": true
      }
    }
  },

  "forwardPorts": [3000, 5432, 5433, 6379, 8080],
  "portsAttributes": {
    "3000": { "label": "API", "onAutoForward": "openBrowserOnce" },
    "5432": { "label": "PostgreSQL (App)", "onAutoForward": "ignore" },
    "5433": { "label": "PostgreSQL (ZITADEL)", "onAutoForward": "ignore" },
    "6379": { "label": "Redis/Dragonfly", "onAutoForward": "ignore" },
    "8080": { "label": "ZITADEL", "onAutoForward": "notify" }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },

  "postCreateCommand": ".devcontainer/setup.sh",
  "postStartCommand": ".devcontainer/init.sh",

  "containerEnv": {
    "APP_DATABASE__HOST": "localhost",
    "APP_DATABASE__PORT": "5432",
    "APP_DATABASE__USERNAME": "godstack",
    "APP_DATABASE__PASSWORD": "godstack",
    "APP_DATABASE__DATABASE": "godstack",
    "DATABASE_URL": "postgres://godstack:godstack@localhost:5432/godstack",
    "APP_CACHE__URL": "redis://localhost:6379",
    "APP_AUTH__ISSUER": "http://localhost:8080",
    "APP_AUTH__CLIENT_ID": "godstack-backend",
    "RUST_LOG": "debug",
    "RUST_BACKTRACE": "1"
  },

  "remoteUser": "vscode"
}
